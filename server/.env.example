# MongoDB Configuration
# Local: mongodb://localhost:27017/codevault
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/codevault
MONGODB_URI=mongodb://localhost:27017/codevault

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5001
NODE_ENV=development

# Email Configuration (Resend or SMTP)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM="CodeVault <noreply@codevault.app>"

# SMTP (Gmail/Nodemailer) Configuration (Alternative to Resend)
SMTP_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="CodeVault <your-email@gmail.com>"
FEEDBACK_RECEIVER_EMAIL=your-email@gmail.com

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
